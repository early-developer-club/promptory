{
  "manifest_version": 3,
  "name": "Promptory",
  "version": "0.1.0",
  "description": "Automatically save your conversations with Generative AI.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://gemini.google.com/app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://gemini.google.com/app/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
