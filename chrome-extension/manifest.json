{
  "manifest_version": 3,
  "name": "Promptory",
  "version": "0.1.0",
  "description": "Automatically save your conversations with Generative AI.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://gemini.google.com/app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://gemini.google.com/app/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  }
}